<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciamento de Apartamentos</title>
    <link rel="stylesheet" href="/style.css">

</head>
<body>
    <%- include('partials/navbar') %>

    <h1>Condomínio</h1>

    <h2>Pesquisar apartamentos</h2>
    <form method="post" action="/apartment/search">
        <input type="text" name="pesquisa" placeholder="ex: 101" required>
        <button type="submit" value="Entrar">Pesquisar</button>
    </form>


    <table >
        <tr>
            <th>Bloco</th>
            <th>Numero do apartamento</th>
            <th>Ações</th>
        </tr>
        <% rows.forEach(row => { %>
            <tr>
                <td><%= row.descricao %></td>
                <td><%= row.numeroApt %></td>
                <td>
                    <form class="form-excluir" action="/apartment/delete/<%= row.idapartamento %>" method="GET" onsubmit="return confirmarExclusao()" style="display:inline;">
                        <button type="submit">Excluir</button>
                    </form>
                    <a href="/apartment/edit/<%= row.idapartamento %>">Editar</a>
                </td>
                 <!-- <td><%= JSON.stringify(row) %></td> Verifica oq tem na row -->
            </tr>
        <% }); %>
    </table>

    <a href="javascript:history.back()">Voltar</a>
    <a href="/apartment/create">Cadastar novo Apartamento</a>

    <script>
        function confirmarExclusao() {
        return confirm("Tem certeza que deseja excluir este apartamento?");
        }
        </script>
</body>
</html>
