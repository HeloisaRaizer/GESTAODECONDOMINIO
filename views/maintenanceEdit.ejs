<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Condomínio - Editar Manutenção</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <h1>Condomínio</h1>
  <h2>Editar Manutenção #<%= m.id %></h2>

  <form action="/maintenance/edit/<%= m.id %>" method="POST">
    <label for="tipo_id">Tipo de manutenção:</label>
    <select name="tipo_id" id="tipo_id" required>
      <% tipos.forEach(t => { %>
        <option value="<%= t.idtipo %>" <%= t.idtipo === m.tipo_id ? 'selected' : '' %>>
          <%= t.nome %>
        </option>
      <% }) %>
    </select>
    <br><br>

    <label for="date">Data:</label>
    <input type="text" id="date" name="date" placeholder="dd/mm/aaaa" value="<%= m.data %>" required>
    <br><br>

    <label for="local">Local:</label>
    <input type="text" id="local" name="local" value="<%= m.local %>" required>
    <br><br>

    <button type="submit">Salvar</button>
    <a href="/maintenance/list"><button type="button">Cancelar</button></a>
  </form>
</body>
</html>